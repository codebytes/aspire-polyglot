<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IoT Sensor Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
            color: #e0e0e0;
            padding: 20px;
            min-height: 100vh;
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
        }
        
        h1 {
            text-align: center;
            margin-bottom: 10px;
            color: #00d9ff;
            text-shadow: 0 0 10px rgba(0, 217, 255, 0.5);
            font-size: 2.5em;
        }
        
        .subtitle {
            text-align: center;
            margin-bottom: 30px;
            color: #888;
            font-size: 0.9em;
        }
        
        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .sensor-card {
            background: rgba(30, 30, 30, 0.8);
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .sensor-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 12px rgba(0, 217, 255, 0.2);
        }
        
        .sensor-card.status-normal {
            border-left: 4px solid #00ff88;
        }
        
        .sensor-card.status-warning {
            border-left: 4px solid #ffaa00;
        }
        
        .sensor-card.status-critical {
            border-left: 4px solid #ff3366;
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { box-shadow: 0 4px 6px rgba(255, 51, 102, 0.3); }
            50% { box-shadow: 0 4px 20px rgba(255, 51, 102, 0.6); }
        }
        
        .sensor-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .sensor-id {
            font-size: 1.2em;
            font-weight: bold;
            color: #00d9ff;
        }
        
        .sensor-location {
            font-size: 0.85em;
            color: #888;
        }
        
        .status-badge {
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.75em;
            font-weight: bold;
            text-transform: uppercase;
        }
        
        .status-badge.normal { background: #00ff88; color: #000; }
        .status-badge.warning { background: #ffaa00; color: #000; }
        .status-badge.critical { background: #ff3366; color: #fff; }
        
        .metrics {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 15px;
        }
        
        .metric {
            text-align: center;
        }
        
        .metric-label {
            font-size: 0.8em;
            color: #888;
            margin-bottom: 5px;
        }
        
        .metric-value {
            font-size: 2em;
            font-weight: bold;
            color: #fff;
        }
        
        .metric-unit {
            font-size: 0.6em;
            color: #888;
        }
        
        .sparkline {
            height: 40px;
            display: flex;
            align-items: flex-end;
            gap: 2px;
            margin-top: 10px;
        }
        
        .sparkline-bar {
            flex: 1;
            background: linear-gradient(to top, #00d9ff, #00ff88);
            border-radius: 2px 2px 0 0;
            opacity: 0.7;
            transition: opacity 0.3s;
        }
        
        .sparkline-bar:hover {
            opacity: 1;
        }
        
        .alerts-section {
            background: rgba(30, 30, 30, 0.8);
            border-radius: 12px;
            padding: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .alerts-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .alerts-title {
            font-size: 1.5em;
            color: #ff3366;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .alert-count {
            background: #ff3366;
            color: #fff;
            padding: 2px 10px;
            border-radius: 12px;
            font-size: 0.7em;
        }
        
        .alert-item {
            background: rgba(255, 51, 102, 0.1);
            border-left: 3px solid #ff3366;
            padding: 12px;
            margin-bottom: 10px;
            border-radius: 6px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .alert-info {
            flex: 1;
        }
        
        .alert-sensor {
            font-weight: bold;
            color: #00d9ff;
        }
        
        .alert-location {
            color: #888;
            font-size: 0.85em;
        }
        
        .alert-reason {
            color: #ff9999;
            margin-top: 5px;
            font-size: 0.9em;
        }
        
        .alert-time {
            color: #666;
            font-size: 0.8em;
            white-space: nowrap;
        }
        
        .no-data {
            text-align: center;
            padding: 40px;
            color: #666;
            font-style: italic;
        }
        
        .loading {
            text-align: center;
            padding: 20px;
            color: #00d9ff;
        }
        
        .last-update {
            text-align: center;
            margin-top: 20px;
            color: #666;
            font-size: 0.85em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üå°Ô∏è IoT Sensor Dashboard</h1>
        <div class="subtitle">Real-time monitoring via Kafka event streaming</div>
        
        <div id="sensors" class="dashboard-grid">
            <div class="loading">Loading sensor data...</div>
        </div>
        
        <div class="alerts-section">
            <div class="alerts-header">
                <div class="alerts-title">
                    ‚ö†Ô∏è Recent Alerts
                    <span id="alert-count" class="alert-count">0</span>
                </div>
            </div>
            <div id="alerts">
                <div class="no-data">No alerts detected</div>
            </div>
        </div>
        
        <div class="last-update">
            Last updated: <span id="last-update">Never</span>
        </div>
    </div>
    
    <script>
        function getStatusClass(temp, humidity) {
            if (temp > 35 || humidity > 90) return 'critical';
            if (temp > 30 || humidity > 80) return 'warning';
            return 'normal';
        }
        
        function getStatusText(temp, humidity) {
            if (temp > 35 || humidity > 90) return 'critical';
            if (temp > 30 || humidity > 80) return 'warning';
            return 'normal';
        }
        
        function formatTime(timestamp) {
            const date = new Date(timestamp);
            return date.toLocaleTimeString();
        }
        
        function formatRelativeTime(timestamp) {
            const now = new Date();
            const date = new Date(timestamp);
            const seconds = Math.floor((now - date) / 1000);
            
            if (seconds < 60) return `${seconds}s ago`;
            if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
            return `${Math.floor(seconds / 3600)}h ago`;
        }
        
        async function updateSensors() {
            try {
                const response = await fetch('/api/readings');
                const sensors = await response.json();
                
                const container = document.getElementById('sensors');
                
                if (sensors.length === 0) {
                    container.innerHTML = '<div class="no-data">Waiting for sensor data...</div>';
                    return;
                }
                
                // Sort by sensor ID
                sensors.sort((a, b) => a.sensorId.localeCompare(b.sensorId));
                
                container.innerHTML = sensors.map(sensor => {
                    const temp = sensor.temperature;
                    const humidity = sensor.humidity;
                    const status = getStatusClass(temp, humidity);
                    const statusText = getStatusText(temp, humidity);
                    
                    // Create sparkline bars from history
                    const sparkline = sensor.history && sensor.history.length > 0
                        ? sensor.history.map(reading => {
                            const height = (reading.temperature / 50) * 100; // Normalize to 0-50¬∞C
                            return `<div class="sparkline-bar" style="height: ${height}%"></div>`;
                        }).join('')
                        : '';
                    
                    return `
                        <div class="sensor-card status-${status}">
                            <div class="sensor-header">
                                <div>
                                    <div class="sensor-id">${sensor.sensorId}</div>
                                    <div class="sensor-location">üìç ${sensor.location}</div>
                                </div>
                                <span class="status-badge ${statusText}">${statusText}</span>
                            </div>
                            <div class="metrics">
                                <div class="metric">
                                    <div class="metric-label">Temperature</div>
                                    <div class="metric-value">
                                        ${temp.toFixed(1)}<span class="metric-unit">¬∞C</span>
                                    </div>
                                </div>
                                <div class="metric">
                                    <div class="metric-label">Humidity</div>
                                    <div class="metric-value">
                                        ${humidity.toFixed(1)}<span class="metric-unit">%</span>
                                    </div>
                                </div>
                            </div>
                            ${sparkline ? `<div class="sparkline">${sparkline}</div>` : ''}
                        </div>
                    `;
                }).join('');
                
            } catch (err) {
                console.error('Error fetching sensors:', err);
            }
        }
        
        async function updateAlerts() {
            try {
                const response = await fetch('/api/alerts');
                const alerts = await response.json();
                
                const container = document.getElementById('alerts');
                const countElement = document.getElementById('alert-count');
                
                countElement.textContent = alerts.length;
                
                if (alerts.length === 0) {
                    container.innerHTML = '<div class="no-data">No alerts detected</div>';
                    return;
                }
                
                container.innerHTML = alerts.map(alert => `
                    <div class="alert-item">
                        <div class="alert-info">
                            <div>
                                <span class="alert-sensor">${alert.sensorId}</span>
                                <span class="alert-location">@ ${alert.location}</span>
                            </div>
                            <div class="alert-reason">${alert.reason}</div>
                        </div>
                        <div class="alert-time">${formatRelativeTime(alert.timestamp)}</div>
                    </div>
                `).join('');
                
            } catch (err) {
                console.error('Error fetching alerts:', err);
            }
        }
        
        async function update() {
            await Promise.all([updateSensors(), updateAlerts()]);
            document.getElementById('last-update').textContent = new Date().toLocaleTimeString();
        }
        
        // Initial update
        update();
        
        // Refresh every 5 seconds
        setInterval(update, 5000);
    </script>
</body>
</html>
